@model IEnumerable<AdminCategoryModel>

<div class="col-md-2">
    <a asp-controller="Categories" class="btn btn-primary" asp-action="Create">Create Category</a>
</div>
<table class="table table-bordered table-hover">

    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <th>
                    @category.Name
                </th>
                <th>
                    <img src="@category.PictureUrl" />
                </th>
                <th>
                    <div class="col-md-2">
                        <a asp-controller="Categories" class="btn btn-primary" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                    </div>
                    <div class="col-md-2">
                        <a asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger" value="Delete">Delete</a>
                    </div>
                </th>
            </tr>
        }
    </tbody>
</table>